set -e
DEPLOY_REPO="https://${MY_DOC}@github.com/barnabegeffroy/receive_plaquette.git"
function main {
	build_doc
	deploy
}


function build_doc { 
	echo "building doc"
	mvn exec:java -Dexec.mainClass=io.github.oliviercailloux.plaquette_mido_soap.M1ApprBuilder
}

function deploy {
	echo "deploying changes"

	if [ -z "$TRAVIS_PULL_REQUEST" ]; then
	    echo "except don't publish doc for pull requests"
	    exit 0
	fi  

	git config --global user.name "Travis CI"
    git config --global user.email barnabe.geffroy@psl.eu
	git -f add out.pdf out.log
	git status
	git commit -m "Lastest site built on successful travis build $TRAVIS_BUILD_NUMBER auto-pushed to github"
	git push $DEPLOY_REPO master:master
}

main